{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "height": 500,
  "width": 800,
  "projection": {"type": "conicEqualArea", "rotate": [-120, 0, 0]},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jnewbery/CartogramMalaysia/master/public/data/malaysia-states.topojson",
        "format": 
        {
          "type": "topojson",
          "feature": "states"
        }        
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "black", "strokeWidth": 2}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jnewbery/CartogramMalaysia/master/public/data/malaysia-states.topojson",
        "format": 
        {
          "type": "topojson",
          "feature": "states"
        }
      },
      "transform": [
        {
          "lookup": "properties.Name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/WongKangZhuang/Visualisation2/main/data/wrangled_data/total_deaths_state.csv"
            },
            "key": "State",
            "fields": ["Total Cases"]
          }
        }
      ],
      "projection": {
        "type": "conicEqualArea", "rotate": [-120, 0, 0]
      },
      "mark": {
        "type": "geoshape",
        "stroke": "black"
      },
      "encoding": {
        "color": {
          "field": "Total Cases",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [10000, 70000, 140000, 225000],
            "range": ["#fcbba1", "#fc9272", "#fb6a4a", "#de2d26", "#a50f15"]
          },

          "legend": {
            "labelColor": "black",
            "titleColor": "black",
            "orient": "left",            
            "labelOffset": 10,
            "titlePadding": 10

          }
        },
        "tooltip": [
          {"field": "properties.Name", "type": "nominal", "title": "State"},
          {"field": "Total Cases", "type": "quantitative", "format": ",", "title": "Total Cases"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/WongKangZhuang/Visualisation2/main/data/wrangled_data/total_deaths_state.csv"
      },
      "mark": {"type": "circle", "opacity": 0.4},   
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "size": {
          "field": "Total Deaths",
          "type": "quantitative",
          "scale": {"domain": [100, 1000, 3000, 6000,9000]},
          "legend": {
            "orient": "right",           
            "titleColor": "black",
            "labelColor": "black",
            "labelOffset": 10,
            "titlePadding": 10,
            "symbolOffset": -10,
            "symbolStrokeColor": "#2e4c66",
            "symbolFillColor": "#2e4c66",
            "formatType": "number"          
          }
        },
        "color": {
          "field": "State",
          "type": "nominal",
          "legend": null,
          "scale":{
            "range": ["#2e4c66"]
          }
        },
        "tooltip": [
          {"field": "State", "type": "nominal"},
          {"field": "Total Deaths", "type": "quantitative", "format": ",", "title": "Total Deaths"}
        ]
      }
    }   
  ],
  "config": {
    "font": "Trebuchet MS"   
  }
}