{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url": "https://raw.githubusercontent.com/WongKangZhuang/Visualisation2/main/data/cases_concat.csv"},
    "vconcat": 
    [{
        "width": 480,
        "height": 240,
        "mark": "bar",
        "encoding": {
            "x": {
                "field": "monthly",
                "type": "temporal",
                "scale": {"domain": {"param": "brush"}},
                "axis": {"title": ""}
            },
            "y": {"field": "cases_new", "type": "quantitative"}
        }
    },
    {
        "width": 480,
        "height": 60,
        "mark": "bar",
        "params": [{
            "name": "brush",
            "select": {"type": "point", "encodings": ["x"]}
        }],
        "encoding": {
            "x": {
                "field": "monthly",
                "type": "temporal"
            },
            "y": {
                "field": "cases_vax",
                "type": "quantitative",
                "axis": {"title": ""}
            }
        }

    }]
}